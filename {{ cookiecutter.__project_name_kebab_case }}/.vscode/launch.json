{
    "version": "0.2.0",
    "configurations": [
        {%- if with_fastapi_api %}
        {
            "name": "API [debug]",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {%- endif %}
        {%- if with_typer_cli %}
        {
            "name": "CLI [debug]",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//src//{{ project_name_snake_case }}//cli.py",
            "args": [
                "--name",
                "Someone"
            ],
            "justMyCode": true
        },
        {%- endif %}
        {
            "name": "pytest [debug]",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python file [debug]",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}